<div class = "container">
	<div class = "team_list">
		<div class = "team">
			<h1>Team 1</h1>
			<%= render @draft.teams.first %>
			<div class = "clear_team">
				<%= link_to "Clear Team", clear_team_draft_team_path(@draft.id, @draft.teams.first)%>
			</div>
		</div>
		
		<div class = "team">
			<h1>Team 2</h1>
			<%= render @draft.teams.last %>
			<div class = "clear_team">
				<%= link_to "Clear Team", clear_team_draft_team_path(@draft.id, @draft.teams.last)%>
			</div>
		</div>
		
		
	</div>
	
	<div class = "remaining_champions">
		<h2>Remaining Champions</h2>
		<% @draft.champions.each do |champ|%>
		
		<div class = "champion" >
			<%= render champ %>
			
			<%= button_to 'Pick', champion_selections_path, {params: {:draft_id => @draft.id, :team_id => @draft.picking_team, :champion_id => champ.id, :picked => true}, method: :post}%>
	
		</div>
		
		<% end %>
	</div>
</div>
